<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Dialog"
    jcr:title="Links"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
        margin="{Boolean}false">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="true">
                <items jcr:primaryType="nt:unstructured">
                    <multifieldwithmap
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Multifield With Map"
                        sling:resourceType="granite/ui/components/coral/foundation/container">
                        <items jcr:primaryType="nt:unstructured">
                            <well
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/well"
                                fieldLabel="Link Details">
                                <items jcr:primaryType="nt:unstructured">
                                    <linkdetailswithmap
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="true"
                                        fieldDescription="Links Details"
                                        fieldLabel="Links Details"
                                        required="false">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            emptyText="Link Details"
                                            name="./linkdetailswithmap">
                                            <items jcr:primaryType="nt:unstructured">
                                                <linkText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter the Link Text"
                                                    fieldLabel="Link Text "
                                                    name="./linkText"/>
                                                <linkURL
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Enter the Link URL"
                                                    fieldLabel="Link URL"
                                                    name="./linkUrl"
                                                    rootPath="/content/ixm-aem"/>
                                                <imageURL
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Enter the Image URL."
                                                    fieldLabel="Image Path"
                                                    name="./imageUrl"
                                                    rootPath="/content/dam/ixm-aem"/>
                                                <altText
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Enter the Image Title "
                                                    fieldLabel="Alt Text"
                                                    name="./altText"/>
                                                <linkCheckbox
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/foundation/form/checkbox"
                                                    name="./linkCheckbox"
                                                    text="Open Link in New Tab ?"
                                                    uncheckedValue="false"
                                                    value="true"/>
                                            </items>
                                        </field>
                                    </linkdetailswithmap>
                                </items>
                            </well>
                        </items>
                    </multifieldwithmap>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
